<Window x:Class="BluePope.SignalRClient.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BluePope.SignalRClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="488" Width="800">
    <Grid>
        <ScrollViewer x:Name="chatViewer" Width="753" Margin="24,19,23,0" Height="236" VerticalAlignment="Top" >
            <TextBlock x:Name="chat" TextWrapping="Wrap" />
        </ScrollViewer>

        <TextBox x:Name="chatInput" HorizontalAlignment="Left" Margin="177,284,0,0" Text="TextBox" TextWrapping="Wrap" Width="315" Height="22" VerticalAlignment="Top"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="510,284,0,0" Width="61" Click="Button_Click" Height="22" VerticalAlignment="Top"/>
    </Grid>
</Window>
